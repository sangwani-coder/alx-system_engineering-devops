global
  log      /dev/log local0
  maxconn  2040
  user     haproxy
  group    haproxy
  tune.ssl.default-dh-param 2040

defaults
  log      global
  mode     http
  option   httplog
  option   dontlognull
  retries  3
  option   redispatch
  timeout  connect 5000
  timeout  client 10000
  timeout  server 10000
  option   forwardfor
  option   http-server-close

frontend www-http
  bind   0.0.0.0:80
  reqadd  X-Forwarded-Proto:\ http
  deafult_backend www-backend

frontend www-https
  bind 0.0.0.0:443 ssl crt /etc/haproxy/certs/www.bdbnb.site.pem
  reqadd  X-Forwaded-Proto:\ https
  acl      letusencrypt-acl path_beg /.well-known/acme-challenge/
  use_backend  letsencrypt-backend if letsencrypt-acl
  default_backend  www-backend

backend www-backend
  balance    roundrobin
  redirect scheme https if !{ ssl_fc }
  server 1313-web-01 34.139.21.144:80 check
  server 1313-web-02 44.192.90.48:80 check

backend letsencrypt-backend
  server letsencrypt 127.0.0:54321
